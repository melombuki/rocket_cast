<h1>Login</h1>
<form class="ui form" {{action "login" on="submit"}}>
  <div class="field">
    <label>Email:</label>
    {{input name="email" value=email}}
  </div>

  <div class="field">
    <label>Password:</label>
    {{input name="password" value=password type="password"}}
  </div>

  <button type="submit" class="ui button">Log in</button>
</form>

{{outlet}}
